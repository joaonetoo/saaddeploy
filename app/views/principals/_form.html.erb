<h2>Cadastro</h2>

<%= form_for("user", url: user_registration_path) do |f| %>

    <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :lattes %><br>
    <%= f.text_field :lattes %>
  </div>
   <div class="field">
    <%= f.label :biografia %><br>
    <%= f.text_area :biografia %>
  </div>
  <div class="field">
    <%= f.label :tipo%><br>
    <%= f.select :type, [['Diretor', 'Principal']]%>
  </div>
  <div class="field">
    <%= f.label :matricula %><br>
    <%= f.text_field :matricula %>
  </div>

  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= label_tag :institution %><br>
    <%= autocomplete_field_tag :institution, params[:institution], autocomplete_institution_nome_institutions_path, :id_element => '#user_institution_id'%>
  </div>

  <div class="field">
    <%= f.hidden_field :institution_id %>
  </div>

  <div class="field" style="display:none;">
    <%= f.text_field :course_id, :value => @course_id%>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmaÃ§Ã£o_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>