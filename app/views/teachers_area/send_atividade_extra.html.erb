<%= javascript_include_tag "application", params[:controller] %>
<%= javascript_include_tag 'testando' %>

 <div class="panel panel-default">
  <div class="panel-heading">
    <center><h4><i class="fa fa-pencil-square-o"></i>Criar Nova Atividade</h4></center>
  </div>
      <div class="row mt">
          <div class="col-lg-12">
            <div class="panel-body">
                  <%= form_tag({ :controller => "teachers_area", :action => "create_atividade_extra"}, :multipart => true) do %>
                <div class="row mt">
                  <div class = "form-group">
                    <div class="col-lg-12">
                      <%= label_tag :titulo %><br>
                      <%= text_field_tag(:titulo, nil,class: "form-control") %>
                    </div> 
                    <div class="col-lg-12">
                          <%= label_tag :descricao %><br>
                          <%= text_area_tag(:descricao,nil, class:"form-control", rows:7) %>
                    </div>
                  </div> 
                </div>
                <div class="row mt">
                  <div class = "form-group">
                    <div class="col-lg-3">
                      <div class="field">
                        <%= label_tag :data_final %><br>
                        <%= date_select(:data_final, :data_final, order: [:day, :month, :year]) %>
                      </div>
                    </div>
                    <div class="col-lg-3">
                      <div class="field">
                        <%= label_tag :arquivo %><br>
                        <%= file_field_tag :arquivo,class: 'btn btn-large btn-default' %>
                      </div>
                    </div>
                </div>
              </div>
              <hr>
              <div class="row mt">
                  <div class = "form-group">
                    <div class="col-lg-6">
                        <%= label_tag :Turma %>
                        <%= grouped_collection_select(nil, :classroom_id, @subjects, :classrooms, :nome, :id, :codigo,{}, {class: "form-control"})%>
                    </div>
                    <div class="col-lg-6">
                        <%= label_tag :Usuarios %>
  <!--                       <%= grouped_collection_select(nil, :users_id, @classrooms, :students, :codigo, :id, :nome)%> 
   -->                 <%= collection_select(nil, :users_id, @students, :id, :nome ,{}, {class: "form-control"})%>
                    </div>
                </div>            
            </div>
            </div>
          <div class="actions">
            <center><br><%= submit_tag "Enviar", class: "btn btn-default" %></center>
          </div>
        <% end %>
   </div>
</div>
</div>