
<div class="panel panel-default">
  <div class="panel-heading">
    <h4></i>Lista de Alunos</h4>
  </div>
      <div class="row mt">
          <div class="col-lg-12">
            <div class="panel-body">
                          <div class="unseen">
                            <div class="dados">
                          <table class="table table-bordered table-striped table-condensed">
                            <thead>
                              <tr>
                                <th>Foto</th>
                                <th>Nome</th>
                                <th>Matricula</th>
                                <th>Email</th>
                                <th>Plano</th>
                              </tr>
                            </thead>

                            <tbody>
                              <% @students.each do |student| %>
                                <tr>
                                  <td><center><%= image_tag student.avatar.url(:thumb), class: "photos_users", width:40, height:40   %></center></td>
                                  <td><%= student.nome %></td>
                                  <td><%= student.matricula %></td>
                                  <td><%= student.email %></td>
                                  <td>
                                  <% if student.plano != nil && student.plano.publico == true%>
                                    <center><%= button_to 'Visualizar', teachers_area_show_plan_path(:plano => student.plano), :class => "btn btn-default "%></center>
                                  <% else %>
                                    <h6>NÃ£o finalizado</h6>
                                  <% end %>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                          </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>



<br>
