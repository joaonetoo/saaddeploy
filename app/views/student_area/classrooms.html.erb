<div class="panel panel-default">
  <div class="panel-heading">
    <center><h4><i class="fa fa-users"></i>Minhas Turmas</h4></center>
  </div>
      <div class="row mt">
          <div class="col-lg-12">
            <div class="panel-body">
                      <div>
                          <div class="unseen">
                            <div class="dados">
                          <table class="table table-bordered table-striped table-condensed">
                            <thead>
                              <tr>
                                <th>Disciplina</th>
                                <th>Turma</th>
                                <th>Turno</th>
                                <th>Ações</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% @classrooms.each do |classroom| %>
                                <tr>
                                  <td><%= classroom.subject.nome %></td>
                                  <td><%= classroom.codigo %></td>
                                  <td><%= classroom.turno%></td>
                                  <td><center><%= button_to 'Visualizar', student_area_classroom_show_path(:classroom => classroom.id), :class => "btn btn-login btn-sm"%></center></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                          </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>



