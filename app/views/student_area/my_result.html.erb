<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.1.135/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/2.0.16/jspdf.plugin.autotable.js"></script>

<%= javascript_include_tag "createPdf"%>
<%= javascript_include_tag "createCsv"%>
<div class="panel panel-default">
<div class="panel-heading">
<center><h4>Âncoras de Carreira</h4></center>
        <%= link_to '#', id: "export", class: "btn btn-success btn-circle pull-right", style:  "margin-top : -35px" do  %> 
            <i class="fa  fa-file-excel-o "></i>
        <% end %>
        <div id='exports'>
</div>

</div>

<div class="row mt">
            <center> <h5>Selecione uma das datas abaixo para visualizar o resultado:</h5></center>


  <div class="col-lg-12">

  <div class="panel-body">

          <%= form_tag(show_by_date_results_path, method: 'post', :remote => true) do %>
            <%= hidden_field_tag "selecao", @selecao %>
          <div class="row">

           <div class="col-lg-3" style="right: -400px">
            <div class="form-group">
            <%= select_tag(:data_final, options_for_select(@datas),:class => "form-control" )  %>
            </div></div></div>
            <% @results.map(&:id).each do |id| %>
              <%= hidden_field_tag "results[]", id %>
            <% end %>
            <%= hidden_field_tag "allUsers", @allUsers %>

          <div class="row mt">
              <div class="col-lg-7">
                  <div class="tab-pane hidden" id="chartjs" style="min-width: 600px; max-width: 600px; height: 400px; margin-right: auto;">
                    <div id="graphic"></div>
                  </div>
              </div>
              <div class="col-lg-5">
                  <table id="tabela_resultados" class="table table-bordered table-striped table-condensed">
                      <thead>
                        <tr>
                          <th>Ordem</th>
                          <th>Pontuação</th>
                          <th>Âncoras</th>
                        </tr>
                      </thead>
                      <tbody  id="media">
                      </tbody>
                  </table>
              </div>
      </div>
      <br/>
 <center><%= submit_tag "Visualizar Âncora", class: "btn btn-login"%></center>
<br/>
  </div>
</div>
</div>


</div>





<% end %>
