<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <center><h4><i class="fa fa-book"></i>Turma</h4></center>
  </div>
      <div class="row mt">
          <div class="col-lg-12">
            <div class="panel-body">
                    <section id="unseen">
                      <div id = "dados">
                      <table class="table table-bordered table-striped table-condensed">
                      <h4><i class="fa fa-user"></i>Professores</h4>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                          <% @classroom.teachers.each do |teacher| %>
                            <tr>
                              <td><center><%= image_tag teacher.avatar.url(:thumb), :class => "photos_users"  , width:40, height:40 %></center></td>
                              <td><%= teacher.nome %></td>
                              <td><%= teacher.email %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                      <table class="table table-bordered table-striped table-condensed">
                      <h4><i class="fa fa-graduation-cap"></i>Alunos</h4>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Matricula</th>
                            <th>Email</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                          <% @classroom.students.each do |student| %>
                            <tr>
                              <td><center><%= image_tag student.avatar.url(:thumb), :class => "photos_users"  , width:40, height:40 %></center></td>
                              <td><%= student.nome %></td>
                              <td><%= student.matricula %></td>
                              <td><%= student.email %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>


                      </div>
                    </section>
                  </div>
            </div>
      </div>
</div>