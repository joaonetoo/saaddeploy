<%# link_to 'Voltar', root_path %>

<br>
<div class="col-lg-12">

  <div class="panel panel-default">

      <div class="panel-heading">
         <center><h2>Eventos</h2></center>
      </div>
      <div class="panel-body">
        <div class="row mt">
          <div class="col-lg-12">      
           <center><h3>Proximos eventos</h3></center>
              <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>Apresentacao</th>
                      <th>Objetivos</th>
                      <th>Inicio</th>
                      <th>Fim</th>
                      <th>Criado por</th>
                      <th colspan="1"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @events.each do |event| %>
                    <% if event.fim.past? == false %>
                      <tr>
                        <td><%= event.nome %></td>
                        <td><%= event.apresentacao %></td>
                        <td><%= event.objetivos %></td>
                        <td><%= event.inicio.strftime("%-d/%-m/%y às %H:%M") %></td>
                        <td><%= event.fim.strftime("%-d/%-m/%y às %H:%M") %></td>
        <!--                 <% if event.submissao %>
            <td>Sim</td>
        <% else %>
            <td>Não</td>
        <% end %> -->
                        <td><%= event.user.nome %></td>
                        <td><%= link_to 'Ver', public_show_events_path(:event => event ), class: "btn btn-login" %></td>
                      </tr>
                      <% end  %>
                    <% end %>
                  </tbody>
                </table>

                <br>
                </section>
        </div>
      </div>
    </div>
  </div>
</div>


