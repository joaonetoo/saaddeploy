<%= link_to 'Voltar', public_events_events_path %>
<div class="container"><h2>Evento </h2></div>
<div id="exTab3" class="container">
<ul  class="nav nav-pills">
      <li class="active">
        <a  href="#1b" data-toggle="tab">Overview</a>
      </li>
      <li><a href="#2b" data-toggle="tab">Inscrição</a>
      </li>
      <li><a href="#3b" data-toggle="tab">Trabalhos</a>
      </li>
    </ul>

      <div class="tab-content clearfix">
        <div class="tab-pane active" id="1b">
          <h3>Dados Gerais</h3>
          <p><%= image_tag @event.image.url(:thumb) %></p>
          <p>
          <strong>Nome:</strong>
          <%= @event.nome %>
          </p>

        <p>
          <strong>Apresentacao:</strong>
          <%= @event.apresentacao %>
        </p>

        <p>
          <strong>Objetivos:</strong>
          <%= @event.objetivos %>
        </p>

        <p>
          <strong>Inicio:</strong>
          <%= @event.inicio.strftime("%-d/%-m/%y às %H:%M") %>
        </p>

        <p>
          <strong>Fim:</strong>
          <%= @event.fim.strftime("%-d/%-m/%y às %H:%M") %>
        </p>
        <p>
          <strong>Criado por:</strong>
          <%= @event.user.nome %>
        </p>
        </div>
        <div class="tab-pane" id="2b">
          <h3>Inscrição para o evento</h3>
          <%= render 'matriculations/form'%>
        </div>
        <div class="tab-pane" id="3b">
          <h3>Submissão de trabalhos</h3>
        <%if @event.submissao == true %>
        <p>
          <strong>Normas</strong>
          <%= @event.normas %>
        </p>

        <p>
          <strong>Deadline</strong>
          <%= @event.deadline.strftime("%-d/%-m/%y: %H:%M") %>
        </p>

        <p>
          <strong>Trabalhos</strong>
          <%= @event.trabalhos %>
        </p>
              <h2>Envio de trabalho</h2>
              <%= render 'projects/form'%>
         <%else%>
         <p>Não há submissões de trabalhos disponíveis</p>
         <%end%>
        </div>
      </div>
  </div>


