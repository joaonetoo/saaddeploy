
<!DOCTYPE html>
<html>

<body>

<% if current_user.nil? %>
      <header class="header black-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <b><a class="logo" href="http://sistema.saad.net.br/curriculums/all_curriculums"><img src="/assets/saad_2.png" width="100px"></a></b>

        </header>
<% end %>
                  <div class="modal fade" id="show_resume">
                  <div class="modal-dialog">
                       <div class="modal-content">
                           <div class="modal-header">
                  <h4 >                       <img  src="/assets/saad_30.png" >
                                  Resumo</h4>
                           </div>
                           <div class="modal-body" id="message1">
                              
                           </div>
                           <div class="modal-footer">
                               <button type="button"  class="btn btn-default" data-dismiss="modal">Fechar</button>
                           </div>
                       </div>
                   </div>
                  </div>
            <%= form_tag search_user_curriculums_path, :method => 'get' do%>
            <div class="col-lg-10">

              <div class="field">
                  <%= label_tag :digite_o_nome_completo_do_usuario %><br>
                  <%= autocomplete_field_tag :user_id, params[:user], autocomplete_user_nome_classrooms_path, placeholder: 'Digite o nome do usuario', :class => 'form-control'%>
              </div>
                            </div>


              <div class="actions">
              <br>
                 <%= submit_tag "Pesquisar",  class: "btn btn-default" %>
              </div>
              <% end %>

              <section class="wrapper">

              <div class="row">
                  <div class="col-lg-12 main-chart">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <center>                      <h4><i class="fa fa-graduation-cap"></i>Alunos</h4>
                    </center>
                      </div>
                          <div class="row mt">
                              <div class="col-lg-12">
                                <div class="panel-body">
                                          <table class="table table-bordered table-striped table-condensed">
                                            <thead>
                                              <tr>
                                                <th>Foto</th>
                                                <th>Nome</th>
                                                <th>Curr√≠culo</th>
                                                <th>Resumo</th>
                                                <!--<th>Autorizado</th>-->
                                              </tr>
                                            </thead>

                                            <tbody>
                          <% @students.each do |student| %>
                      <script>
                        $(function(){

                            $('#resume<%=student.id%>').on('click', function() {
                                $("#message1").html("<%= student.curriculum.message %>");
                              });
                            });
                        </script>

                            <tr>
                              <td><center><%= image_tag student.avatar.url(:thumb), :class => "photos_users"  , width:40, height:40 %></center></td>
                              <td><%= student.nome %></td>
                                  <td><center><%= button_to 'Visualizar', curriculums_path(:student => student.id), :class => "btn btn-default btn-sm"%></center></td>
                                  <td><%= link_to "Ver", '#show_resume','data-toggle' => 'modal',:id => "resume#{student.id}", :class => "btn btn-default btn-sm" %>
                                </td>
                            </tr>
    
                          <% end %>
                        </tbody>
                      </table>
                  </div>
            </div>
      </div>
</div>
                  </div>
              </div>
              </section>
</body>

