<div class="panel panel-default">

    <div class="panel-heading">
       <h4><center>Eventos Terminados</center></h4>
    </div>
    <div class="panel-body">
      <div class="row mt">
        <div class="col-lg-12">

        <table class="table table-bordered table-striped table-condensed">
          <thead>
          <tr>
            <th>Nome</th>
            <th>Apresentacao</th>
            <th>Inicio</th>
            <th>Fim</th>
            <th>Deadline</th>
            <th>Criado por</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.nome %></td>
              <td><%= event.apresentacao %></td>
              <td><%= event.inicio.strftime("%d/%m/%y às %H:%M") %></td>
              <td><%= event.fim.strftime("%d/%m/%y às %H:%M") %></td>
              <td><%= event.deadline.strftime("%d/%m/%y às %H:%M") %></td>
              <td><%= event.user.nome %></td>
              <td><%= link_to 'Ver', coordinators_area_show_finished_event_path(event: event), class: "btn btn-login btn-sm" %></td>
<!--               <td><%= link_to 'Editar', edit_event_path(event) %></td>
            <td><%= link_to 'Deletar', event, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
             -->            </tr>
          <% end %>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</div>