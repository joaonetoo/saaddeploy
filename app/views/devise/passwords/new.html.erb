 <div id="login-page">
  <div class="container">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-login" }) do |f| %>
     <h2 class="form-login-heading">Esqueceu a senha ?</h2>
        <div class="login-wrap">
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true , placeholder: 'Digite o email', class: "form-control" %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Enviar para o email as instruções de recuperação", class:" btn btn-success btn-login btn-sm" %>
			  </div>
			<% end %>
		<%= render "devise/shared/links" %>

		</div>
  </div>
  </div>

