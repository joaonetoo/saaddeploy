  <div class="panel panel-default">
    <div class="panel-heading">
        <center><h4>Disciplinas</h4></center>
        <%= link_to new_subject_path, class: "btn btn-primary btn-login  btn-sm pull-right", style:  "margin-top : -35px" do  %> 
            <i class="fa fa-plus"></i>
        <% end %>

    </div>
    <div class="panel-body">
      <table class="table table-bordered table-striped table-condensed">
          <thead>

            <tr>
              <th>Nome</th>
              <th>Carga Horária</th>
              <th>Codigo</th>
              <th>Curso</th>
              <th colspan="3"><center>Ações</center></th>
            </tr>
          </thead>

          <tbody>
            <% @subjects.each do |subject| %>
              <tr>
                <td><%= subject.nome %></td>
                <td><%= subject.ch %></td>
                <td><%= subject.codigo %></td>
                <td><% subject.course.nome %></td>
                <td><%= link_to 'Abrir', subject, class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Editar', edit_subject_path(subject), class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Deletar', subject, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "btn btn-success btn-login btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>
