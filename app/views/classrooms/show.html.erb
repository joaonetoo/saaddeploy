<p id="notice"><%= notice %></p>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                  <div class="col-lg-12">
                    <section id="unseen">
                      <div id = "dados">
                      <table class="table table-bordered table-striped table-condensed">
                            <thead>
                              <tr>
                                <th>Turma</th>
                                <th>Disciplina</th>
                                <th>Turno</th>
                                <th>Ações</th>
                              </tr>
                            </thead>
                            <tbody>
                                <tr>
                                  <td><%= @classroom.codigo %></td>
                                  <td><%= @classroom.subject.nome %></td>
                                  <td><%= @classroom.turno%></td>
                                  <td><center><%= link_to 'Editar', edit_classroom_path(@classroom) %></center></td>
                                </tr>
                            </tbody>
                          </table>
                      <h2><i class="fa fa-angle-right"></i>Participantes</h2>
                      <table class="table table-bordered table-striped table-condensed">
                      <h3><i class="fa fa-angle-right"></i>Professores</h3>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Ações</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                                <%= render @teachers%>
                        </tbody>
                      </table>
                      <table class="table table-bordered table-striped table-condensed">
                      <h3><i class="fa fa-angle-right"></i>Alunos</h3>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Matricula</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Ações</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                          <%= render @students%>
                        </tbody>
                      </table>


                      </div>
                    </section>
                  </div>
            </div>
            <%= form_tag add_user_classrooms_path, :method => 'get' do%>

              <div class="field">
                  <%= label_tag :adicionar_usuario %><br>
                  <%= autocomplete_field_tag :user_id, params[:user], autocomplete_user_nome_classrooms_path, placeholder: 'Digite o nome do usuario', :class => 'form-control'%>
              </div>

              <%= hidden_field_tag :classroom_id, @classroom.id %>

              <div class="actions">
                 <%= submit_tag "adicionar", :class => "btn btn-success btn-lg" %>
              </div>
              <% end %>
      </div>
</div>

