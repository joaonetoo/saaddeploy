<%= javascript_include_tag 'search_learning' %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Pesquisar Turma</h4>
  </div>
      <div class="row mt">
          <div class="col-lg-12">
            <div class="panel-body">
                <%= form_tag({ :controller => "classrooms", :action => "list"}, { :id => "form2"}) do |f| %>
                <div class="field">

                    <%= hidden_field_tag :institution_id, @institution.id %>

                    <%= hidden_field_tag :campu_id, @campu.id %>

                    <%= hidden_field_tag :center_id, @center.id %>

                    <%= hidden_field_tag :course_id, @course.id %>

                    <div class="campo_compare">
                    <%= label_tag :Disciplina %>
                    <%= collection_select(nil, :subject_id, @subjects, :id, :nome,{}, {class: "form-control"})%>
                    </div>
                    <div class="campo_compare">
                    <%= label_tag :Turma %>
                    <%= collection_select(nil, :classroom_id, @classrooms, :id, :codigo,{}, {class: "form-control"})%>
                    </div>
                  </div>

                    <div class="row mt">
                        <div class="col-lg-12">
                            <br><center><%= submit_tag "Buscar", class: "btn btn-default"  %></center>
                        </div>
                    </div>
                   <% end %>
            </div>
        </div>
    </div>
</div>
                

                <%# link_to 'Nova Turma', new_classroom_path %>