  <div class="panel panel-default">
    <div class="panel-heading">
        <center><h4>Turmas</h4></center>
        <%= link_to new_classroom_path, class: "btn btn-primary btn-login  btn-sm pull-right", style:  "margin-top : -35px" do  %> 
            <i class="fa fa-plus"></i>
        <% end %>

    </div>
    <div class="panel-body">
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th>Disciplina</th>
            <th>Ano</th>
            <th>Semestre</th>
            <th>Turno</th>
            <th>Nome</th>
            <th colspan="3"><center>Ações</center></th>
          </tr>
        </thead>
        <tbody>
          <% @classrooms.each do |classroom| %>
            <tr>
              <td><%= classroom.subject.nome %></td>
              <td><%= classroom.ano %></td>
              <td><%= classroom.semestre %></td>
              <td><%= classroom.turno %></td>
              <td><%= classroom.codigo %></td>
              <td><center><%= button_to 'Detalhes', classroom, :class => "btn btn-primary btn-login btn-sm", method: :get%></center></td>
              <td><%= button_to 'Editar', edit_classroom_path(classroom), :class => "btn btn-primary btn-login btn-sm", method: :get %></td>
              <%if current_user.type == 'Administrator'%>
                <td><%= link_to 'Deletar', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-login btn-sm" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
